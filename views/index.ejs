<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 flex items-center justify-center min-h-screen transition-all duration-300" id="theme">

    <div class="w-full max-w-md bg-gray-800 p-6 rounded-lg shadow-lg">
        <!-- Header -->
        <div class="flex justify-between items-center mb-5">
            <h1 class="text-2xl text-white font-semibold">Chat App</h1>
            <button id="toggleTheme" class="bg-gray-700 text-white px-3 py-1 rounded-md text-sm hover:bg-gray-600 transition">
                ðŸŒ™ Dark Mode
            </button>
        </div>

        <!-- Chat Display Area -->
        <div class="w-full h-52 bg-gray-700 p-3 rounded-lg overflow-y-auto text-white text-sm space-y-2" id="reply">
            <!-- Messages will appear here -->
        </div>

        <!-- Username Input -->
        <input type="text" id="username" class="w-full mt-4 p-2 bg-gray-700 text-white rounded-lg focus:outline-none" 
               placeholder="Enter your name..." />

        <!-- Message Input -->
        <textarea id="msg" class="w-full h-16 p-3 mt-2 bg-gray-700 text-white rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
                  placeholder="Type your message here..."></textarea>

        <!-- Send Button -->
        <button id="btn" class="w-full mt-4 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-lg font-semibold transition duration-200">
            Send Message
        </button>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/script.js"></script>

</body>
</html>
